{
    "compilerOptions": {
        "declaration"             : true,
        "declarationMap"          : true,
        "esModuleInterop"         : true,
        "incremental"             : false,
        "isolatedModules"         : true,
        "lib"                     : [
            "es2022",
            "DOM",
            "DOM.Iterable"
        ],
        "moduleDetection"         : "force",
        "noUncheckedIndexedAccess": true,
        "resolveJsonModule"       : true,
        "target"                  : "ESNext",
        "module"                  : "ESNext",
        "moduleResolution"        : "Bundler",
        "strict"                  : true,
        "skipLibCheck"            : true,
        "types"                   : [
            "node"
        ],
        "jsx"                     : "react-jsx",
        "jsxImportSource"         : "hono/jsx"
    }
}
